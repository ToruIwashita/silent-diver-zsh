integer resource_index
local resource dest
local -a args
args=("${(z)BUFFER}")

resource_index=$#args
resource=$args[$resource_index]

if [[ -d $resource ]]; then
  dest=$resource
  args[$resource_index]=''
else
  dest=$resource:h
  args[$resource_index]=$resource:t
fi

if (( ! $#dest )) || [[ $dest == '.' ]]; then
  zle -I
  return
fi

BUFFER=$args
zle push-line

if [[ $options[autocd] != on ]]; then
  BUFFER="cd $dest"
else
  BUFFER=$dest
fi

zle accept-line

# vim: ft=zsh
